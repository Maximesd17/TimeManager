{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": [
        "src/components/**/*.vue",
        "src/composables/**/*.ts",
        "src/layouts/**/*.vue",
        "src/middleware/**/*.ts",
        "src/router/**/*.ts",
        "src/store/**/*.ts",
        "src/utils/**/*.ts",
        "src/plugins/**/*.ts",
        "src/views/**/*.vue",

        "env.d.ts",
        "src/App.vue",
    ],
    "exclude": ["src/**/__tests__/*"],
    "compilerOptions": {
        "composite": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        },
        "allowJs": true
    }
}
